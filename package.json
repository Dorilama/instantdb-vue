{
  "name": "@dorilama/instantdb-vue",
  "version": "0.4.0",
  "description": "Unofficial Instant DB for Vue",
  "author": "dorilama",
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ]
    }
  },
  "files": [
    "components.d.ts",
    "dist"
  ],
  "homepage": "https://github.com/Dorilama/instantdb-vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dorilama/instantdb-vue.git"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "cd ./sandbox/vite-vue && npm run dev",
    "dev:nuxt": "cd ./sandbox/nuxt && npm run dev",
    "publish-package": "npm publish --access public",
    "prepublishOnly": "node ./scripts/prepublish.js && npm run build",
    "update": "npx rimraf package-lock.json node_modules sandbox/vite-vue/package-lock.json sandbox/vite-vue/node_modules sandbox/nuxt/package-lock.json sandbox/nuxt/node_modules && npm i --save-exact @instantdb/core@latest && cd sandbox/vite-vue && npm i && cd ../nuxt && npm i"
  },
  "dependencies": {
    "@instantdb/core": "0.17.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0-0"
  },
  "devDependencies": {
    "@vue/tsconfig": "^0.5.1",
    "mkdist": "^1.5.5",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0"
  },
  "type": "module"
}